<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/ivHomeContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/radius"/>

    <ImageView
        android:id="@+id/ivHomeImageGame"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvHomeGame"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="fitXY"

        />
    <TextView
        android:id="@+id/tvHomeGame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/ivHomeImageGame"
        app:layout_constraintEnd_toEndOf="@+id/ivHomeImageGame"
        app:layout_constraintTop_toBottomOf="@id/ivHomeImageGame"
        android:layout_marginLeft="11dp"
        android:textSize="24sp"
        android:textColor="#1F2D3D"
        android:text="teste"

        />

    <TextView
        android:id="@+id/tvHomeYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        app:layout_constraintStart_toStartOf="@+id/ivHomeImageGame"
        app:layout_constraintEnd_toEndOf="@+id/ivHomeImageGame"
        app:layout_constraintTop_toBottomOf="@id/tvHomeGame"
        android:textSize="24sp"
        android:text="test"

        />

</androidx.constraintlayout.widget.ConstraintLayout>